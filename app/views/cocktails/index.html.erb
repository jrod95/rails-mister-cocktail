<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('https://images.unsplash.com/photo-1470337458703-46ad1756a187?ixlib=rb-1.2.1&ixid=MXwxMjA3fDB8MHxzZWFyY2h8NXx8Y29ja3RhaWx8ZW58MHx8MHw%3D&auto=format&fit=crop&w=1000&q=60');">
  <div class="container">
    <h1>Coctelero</h1>
    <p>Share your favorite cocktail recipes!</p>
    <%= render "form" %>
  </div>
  <div>
    <%@cocktails.each do | cocktail| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(1,0,0,0.3), rgba(0,0,0,0.3)), url('https://images.unsplash.com/photo-1541807456792-67393c00912c?ixid=MXwxMjA3fDB8MHxzZWFyY2h8NzB8fGNvY2t0YWlsc3xlbnwwfHwwfA%3D%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=60')">
        <%= link_to cocktail["name"], cocktail_path(cocktail['id']) %>
      </div>
    <% end %>
  </div>

